<html>

<head>
  <title>Маджьа</title>
  <meta charset="utf-8" />
  <style>
    body {
      font-family: "Century Gothic";
      color: #ffffff;
      background: #010028;
    }

    .button-check {
      border: 2px solid red;
      font-family: "Century Gothic";
      font-size: 18px;
      margin: 50px;
      width: 140;
      height: 40;
      border-radius: 10px;
      background-color: #010028;
      color: white;
    }

    ::selection {
      background: #ffb7b7;
    }

    textarea:focus,
    input:focus,
    button:focus {
      outline: none;
    }

    .input-check {
      font-family: "Century Gothic";
      color: #ffffff;
      background: #010028;
      border-radius: 20px;
      width: 350px;
      height: 60px;
      font-size: 35;
      text-align: center;
      border: 2px solid red;
      margin-top: 25px;
      color: gray;
    }

    .input-result {
      font-family: monospace;
      font-weight: 100;
      color: #ffffff;
      background: #010028;
      border-radius: 100px;
      width: 100px;
      height: 100px;
      font-size: 35;
      text-align: center;
      border: 2px solid red;
      margin-top: 25px;
      color: white;
      cursor: default;
    }
  </style>
  <script>
    var clicked = false;
    var firstclick = false;
    var i = 0;
    var timerOff = true;
    var str  = '...';
    var first = 0;

    function Input_focus() {
      var inp = document.getElementById('i1');
      clicked = true;
      if (!firstclick) {
        inp.value = '';
        inp.style.color = 'white';
      }
      firstclick = true;
    }

    function Input_blur() {
      clicked = false;
      var but = document.getElementById('b1');
      var inp = document.getElementById('i1');
      if (!clicked) {
        inp.style.width = '350px';
        inp.style.fontSize = '35px';
        inp.style.height = '60px';
        inp.style.marginTop = '25px';
        but.style.marginTop = '50px';
      }
    }

    function Button_mouse_over() {
      var but = document.getElementById('b1');
      var anim = document.getElementById('animation');
      var lab = document.getElementById('l1');
      but.style.width = '160px';
      but.style.height = '50px';
      if (!clicked) {
        but.style.marginTop = '46';
        lab.style.marginTop = '19';
      } else {
        but.style.marginTop = '37';
        lab.style.marginTop = '18';
      }
      but.style.border = '3px solid red';
      but.style.fontSize = '22';
    }

    function Button_mouse_out() {
      var but = document.getElementById('b1');
      var lab = document.getElementById('l1');
      but.style.width = '140px';
      but.style.height = '40px';
      if (!clicked) {
        but.style.marginTop = '50';
        lab.style.marginTop = '25';
      } else {
        but.style.marginTop = '40px';
        lab.style.marginTop = '25';
      }
      but.style.border = '2px solid red';
      but.style.fontSize = '18';
    }

    function Input_mouse_over() {
      if (!clicked) {
        var but = document.getElementById('b1');
        var inp = document.getElementById('i1');
        inp.style.fontSize = '40px';
        inp.style.width = '380px';
        inp.style.height = '75px';
        but.style.marginTop = '40px';
        inp.style.marginTop = '20px';
      }
    }

    function Input_mouse_out() {
      var but = document.getElementById('b1');
      var inp = document.getElementById('i1');
      if (!clicked) {
        inp.style.width = '350px';
        inp.style.fontSize = '35px';
        inp.style.height = '60px';
        inp.style.marginTop = '25px';
        but.style.marginTop = '50px';
      }
    }

    function setvalue() {
      i = 0;
      var lab = document.getElementById('l1');
      var but = document.getElementById('b1');
      var inp = document.getElementById('i1');
      lab.style.opacity = '100';
      lab.style.fontSize = '35';
      if ((timerOff) && (inp.value != '') && (inp.value != 'Твое имя')) {
        SetResult();
        timerOff = false;
      }

    }

    function SetResult() {
      i += 1;
      var lab = document.getElementById('l1');
      lab.value = Math.floor(Math.random() * (100 - 0 + 1)) + 0;
      var t = setTimeout("SetResult()", 50);
      if (i > 35) {
        clearTimeout(t);
        timerOff = true;
        var inp = document.getElementById('i1');
        if ((inp.value == 'Шаур') || (inp.value == 'шаур') || (inp.value == 'shaur') || (inp.value == 'Shaur')) {
          lab.style.fontSize = '60';
          lab.value = '∞';
        }
        if ((inp.value == 'Тимур') || (inp.value == 'тимур') || (inp.value == 'timur') || (inp.value == 'Timur')) lab.value = '0';
        if(inp.value == str) lab.value = first;
        first = lab.value;
        str = inp.value;
      }
    }


  </script>

</head>

<body>

  <h1 align="center">Определитель чёткости</h1>
  <h2 align="center">Короче, маджьа, вводишь свое имя, и я скажу насколько ты четкий </h2>
  <div align="center">
    <input id="i1" class="input-check" onmouseover="Input_mouse_over()" onmouseout="Input_mouse_out()" onfocus="Input_focus()" onblur="Input_blur()" value="Твое имя" /><br>
    <input type="button" class="button-check" value="Определить" id="b1" onclick="setvalue()" onmouseover="Button_mouse_over()" onmouseout="Button_mouse_out()" />
    <br />
    <input id="l1" type="tel" class="input-result" style="opacity: 0" value="..." onselectstart="return false" onmousedown="return false" />
  </div>

</body>

</html>
